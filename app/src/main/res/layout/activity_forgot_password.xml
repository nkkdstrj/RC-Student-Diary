<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">

    <LinearLayout
        android:id="@+id/prLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/EmailEnterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:text="Enter your Email Address"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/editbox_background"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawableTint="@color/rc_ic_launcher_background"
            android:ems="10"
            android:fontFamily="@font/poppins"
            android:gravity="center_horizontal"
            android:hint="Enter Email Address"
            android:inputType="textEmailAddress"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/editTextTextEmailAddress2"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/saveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1e329d"
                android:fontFamily="@font/poppins"
                android:text="Confirm"
                android:textColor="@color/white" />

            <!-- Add space between Confirm and Cancel buttons -->
            <Space
                android:layout_width="16dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#1e329d"
                android:fontFamily="@font/poppins"
                android:text="Cancel"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>