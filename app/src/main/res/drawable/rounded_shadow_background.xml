<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The solid color background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1e329d" /> <!-- Background color -->
            <corners android:radius="8dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- The shadow beneath the view -->
    <item android:right="1dp" android:left="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#1e329d" /> <!-- Shadow color -->
            <corners android:radius="8dp" /> <!-- Same corner radius as the background -->
        </shape>
    </item>
</layer-list>
